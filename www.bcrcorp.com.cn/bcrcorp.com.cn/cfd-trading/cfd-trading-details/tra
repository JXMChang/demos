<script type="text/javascript">

	$(document).ready(function(){
		load_price_feed();
		setTimeout(load_price_feed,5000);
	});

	function load_price_feed() {
		$.ajax({
			type: "get",
			//data: "cate=1",
			url: "/tool/pricefeed",
			dataType: "json",
			async: true,
			//context: {yqlTable: yqlTable, contextId: contextId},
			success: parseFeed,
			error: errorFeed
		});
	}
	
	function parseFeed(json)
	{
		$.each(json,(key, dataObject)=>{
			var old_bid=$('#'+key+'_bid').text();
			var old_ask=$('#'+key+'_ask').text();
			
			var pclass = (old_bid =='0.00' || old_bid == dataObject.bid ? 'text-muted': old_bid > dataObject.bid ? 'text-danger':'text-success' );

			$('#'+key+'_bid').text(dataObject.bid).removeClass(['text-danger','text-success','text-muted']).addClass(pclass);
			$('#'+key+'_ask').text(dataObject.ask).removeClass(['text-danger','text-success','text-muted']).addClass(pclass);;
		});		
		setTimeout(load_price_feed,5000);
	}

	function errorFeed()
	{
		//console.log('I am error');
	}

	$('.conditions').tabs({
active: 0,
});

// Add Or Remove .active on navtabs
var navPills = $('.nav-link');

navPills.on('click', function() {
navPills.removeClass('active');
$(this).addClass('active');
});

$('select#tabMobile').on('change',function(){
$('.nav-link[href="#option-' + $(this).val() + '"]').click();
});

</script>
