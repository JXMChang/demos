    <div class="valuePropositionBanner">
        
            <div>
                <span class="white-icon heritage"></span>
                
                    <a href="/zh/about-ig">
                
                1974年伦敦诞生
                
                    </a>
                
            </div>
        
            <div>
                <span class="white-icon clients"></span>
                
                    <a href="/zh/about-ig">
                
                逾185000全球客户信心之选
                
                    </a>
                
            </div>
        
            <div>
                <span class="white-icon markets"></span>
                
                    <a href="/zh/about-ig">
                
                15,000种丰富金融市场
                
                    </a>
                
            </div>
        
