	jQuery('input#currency-switch').on('change',function(){
		if(jQuery(this).is(':checked'))
		{
			//alert(jQuery(this).val());
			set_currency('usd');
		}else
		{
			//alert(jQuery(this).val()+'kk');
			set_currency('aud');
		}
	});
});
function set_currency(currency)
{
	// /currency
	jQuery.get("/currency/"+currency, function() {
		setTimeout(function(){ document.location.reload(true); }, 1000);		
	});
}
