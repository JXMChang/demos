        <div class="text text-content"
                     >
                






    
    
        
    



                





                
                    <div class="content-cta-wrapper">
                        







    <p class="cta float-left">
        <a class="button  button-ghost-black js_target" href="/zh/demo-account" target="_self">
                免费模拟账户
        </a>
    </p>


                        







    
    
        
            <div class="cta right cta-sec">
                
                    <a class=" button button-green js_target" href="/zh/create-account" target="_self">
                            申请账户
                    </a>
                
            </div>
        
    






                    </div>
                
