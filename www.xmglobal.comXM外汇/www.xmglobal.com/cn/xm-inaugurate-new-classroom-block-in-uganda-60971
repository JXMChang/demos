<script type="text/javascript">

    var cnCountries = new Array("CN");
        var livechatFlagHasAffiliateID = false;
    
    availableGroups = JSON.parse('{"ar":"34","hu":"35","de":"40","default":"33"}');
    lcLicense = 5419421;

    $("#close-prechat-form").click(function () {
        $("#custom-livechat").hide();
    });

    $(".custom-livechat-hd").click(function () {
        if (!sessionStorage.getItem('disableLiveChatButton') === true) {
            $("#custom-livechat").show();
        }
    });

    $("#start-chat").click(function() {

        var formID = $(this).closest("form").attr('id');
        var chatFormValidation = $('#'+formID).valid();
        if (chatFormValidation) {

            sessionStorage.setItem('openLiveChat', true);
            sessionStorage.setItem('disableLiveChatButton', true);

            sessionStorage.setItem('firstName', $("#first_name").val());
            sessionStorage.setItem('lastName', $("#last_name").val());
            sessionStorage.setItem('email', $("#email_visitor").val());
            sessionStorage.setItem('preferred_language', $("#preferred_language_visitor").val());
            sessionStorage.setItem('tradingAccount', "");

            $("#custom-livechat").hide();

            lcBrandid = 'xmbz';
            lcCountry = 'CN';

            if (cnCountries.indexOf(lcCountry) !== -1) {
                if (livechatFlagHasAffiliateID) {
                    group = 46;
                } else {
                    group = 46;
                }
            } else {
                group = 46;
            }
            sessionStorage.setItem('group', group);

            window.__lc = window.__lc || {};
            window.__lc.license = lcLicense;
            window.__lc.group = group;
            window.__lc.params = [
                {name: 'Brand_id', value: lcBrandid},
                {name: 'Country', value: lcCountry},
                {name: 'First Name', value: $("#first_name").val()},
                {name: 'Last Name', value: $("#last_name").val() },
                {name: 'Email', value: $("#email_visitor").val() },
                {name: 'Language', value: $("#preferred_language").val()},
                {name: 'TradingAccount', value: ""}
            ];

            var LC_API = LC_API || {};

            (function () {
                var lc = document.createElement('script');
                lc.type = 'text/javascript';
                lc.async = true;
                lc.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.livechatinc.com/tracking.js';
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(lc, s);
            })();

            LC_API.on_after_load = function() {
                LC_API.open_chat_window();
            };
        }
    });

    $("#start-chat-member").click(function() {

        var formID = $(this).closest("form").attr('id');
        var chatFormValidation = $('#'+formID).valid();
        if (chatFormValidation) {


            sessionStorage.setItem('tradingAccount', $("#user_id").val());
            sessionStorage.setItem('preferred_language', $("#preferred_language").val());

            $("#custom-livechat").hide();

            $( "#"+formID ).submit();
        }
    });

    
    
        window.__lc = window.__lc || {};
        window.__lc.license = lcLicense;
        window.__lc.group = sessionStorage.getItem('group');
        window.__lc.params = [
            {name: 'Brand_id', value: 'XMBZ'},
            {name: 'Country', value: 'CN'},
            {name: 'Language', value: sessionStorage.getItem('preferred_language')},
            {name: 'TradingAccount', value: sessionStorage.getItem('tradingAccount')},
            {name: 'Email', value: sessionStorage.getItem('email')}
        ];

        var LC_API = LC_API || {};

        LC_API.on_before_load = function () {
            $("#custom-livechat").hide();
            // don't hide the chat window only if visitor
            // is currently chatting with an agent
            if (LC_API.visitor_engaged() === false && livechat_chat_started === false) {
                LC_API.hide_chat_window();
                $("#custom-livechat").show();
            } else {
                $("#custom-livechat").hide();
                LC_API.open_chat_window();
            }
        };

        LC_API.on_after_load = function() {
            LC_API.open_chat_window();
        };

        LC_API.on_chat_started = function () {
            livechat_chat_started = true;
        };
    chatstartedBlock: {
        if (sessionStorage.getItem('openLiveChat') !== "true") {
            break chatstartedBlock;
        }
        (function () {
            var lc = document.createElement('script');
            lc.type = 'text/javascript';
            lc.async = true;
            lc.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'cdn.livechatinc.com/tracking.js';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(lc, s);
        })();
    }

