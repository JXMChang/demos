<div class="list-wrapper js_list clearfix style-general-list  ">
    






    
        <h2
            class="heading h2"
            
        >
             如何計算融資? 

        </h2>
    
    



    

    
    

    
    

    
    
    
    

    

        
        

            

        
    

    

</div>
</div>
<div class="igColumns section">








<div class="cols-bg 
                    
                    bg-none
                    
                    
                    col-margin-bot
                    
                    
                    "
                    
                    >

        <div class="cols col-12">

        <div class="col col1 parsys"><div class="component-group parbase section">








<div class="component-group-wrapper outline">

    <div class="component-group-parsys js_component-group parsys"><div class="accordion parbase section">












<script>
    var i18n= i18n || {};
i18n['accordion.more']='\u986F\u793A\u8A73\u7D30';i18n['accordion.less']='\u4E0D\u986F\u793A';</script>

<div class="accordion-wrapper js_accordion accordion-expanded content"
     data-desktop="closed"
     data-mobile="closed"
     data-tablet="closed">
    
        
            
            
                <div tabindex="0" class="accordion-clickable js_accordion-clickable accordion-plus">
                    
                    <span class="accordion-text"><p>股票融資</p>
</span>
                </div>
            
        
    
    
    <div class="accordion-parsys js_accordion_content accordion-content accordion-parsys parsys">
