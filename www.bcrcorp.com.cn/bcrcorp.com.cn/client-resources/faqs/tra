			var category = $('.list-group-item a');
			category.on('click', function(e) {
				e.preventDefault();
				category.removeClass('active');
				$(this).addClass('active');
				$('section.category-content').hide();
				var targetId = $(this).attr('href');
				$('section' + targetId).show();
			});
			$('select#chooseCategory').on('change',function(){
				$('.list-group-item a[href="#' + $(this).val() + '"]').click();
			});
		});
